<UserControl
    x:Class="Money.Views.Controls.Loading"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Money.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="400"
    Visibility="Collapsed">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ProgressRing x:Name="Ring" IsActive="{x:Bind IsActive}" Width="100" Height="100" />
        <ProgressBar x:Name="Bar" IsIndeterminate="True" Margin="12,0" Visibility="Collapsed" />
    </Grid>
</UserControl>
