<StackPanel
    x:Class="Money.Views.Controls.DevelopmentTools"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="400">
    <Button x:Name="btnClearStorage" Click="btnClearStorage_Click" ToolTipService.ToolTip="Delete Everything" Margin="4">
        <SymbolIcon Symbol="Delete" />
    </Button>
    <Button x:Name="btnRebuildReadModels" Click="btnRebuildReadModels_Click" ToolTipService.ToolTip="Rebuild Read Models" Margin="4">
        <SymbolIcon Symbol="RepeatAll" />
    </Button>
    <Button x:Name="btnSaveStorage" Click="btnDownloadStorage_Click" ToolTipService.ToolTip="Download DB" Margin="4">
        <SymbolIcon Symbol="Download" />
    </Button>
    <Button x:Name="btnLoadStorage" Click="btnUploadStorage_Click" ToolTipService.ToolTip="Upload DB" Margin="4">
        <SymbolIcon Symbol="Upload" />
    </Button>
    <Button x:Name="btnSetRevisionStorage" Click="btnSetRevisionStorage_Click" ToolTipService.ToolTip="Set Storage Revision" Margin="4">
        <SymbolIcon Symbol="ImportAll" />
    </Button>
    <ToggleSwitch x:Name="tswMobile" OnContent="Mobile view" OffContent="Mobile view" Toggled="tswMobile_Toggled" Margin="2,0" />
</StackPanel>
